@model MVCPhotoGallery.Models.Album
    @{
        ViewBag.Title = "Delete";
    }


    <h2 class="text-center">Delete Album</h2>
    @using (Html.BeginForm("Delete", "Album", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4 ">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "List", "Album", new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-info" />
                </div>
            </div>
    }

