@model MVCPhotoGallery.Models.ViewModels.CommentViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit comment</h2>
@using (Html.BeginForm("Edit", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
        <div class="col-sm-4">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "7" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
            @Html.ActionLink("Cancel", "Details", "Photo", new { @id = ViewBag.PhotoId }, new { @class = "btn btn-default" })
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
}


