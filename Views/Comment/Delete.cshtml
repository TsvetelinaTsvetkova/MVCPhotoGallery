@model MVCPhotoGallery.Models.DbModels.Comment
@{
    ViewBag.Title = "Delete";
}

<h2>Delete comment</h2>
@using (Html.BeginForm("Delete", "Comment",new {@id = Model.Id} ,FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
        <div class="col-sm-4">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "7", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
            @Html.ActionLink("Cancel", "Details", "Photo", new { @id = Model.PhotoId}, new { @class = "btn btn-default" })
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
}

