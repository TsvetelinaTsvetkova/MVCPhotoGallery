

@model List<MVCPhotoGallery.Models.Album>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-sm-2 text-center text-uppercase">
                <p>
                    <h2>
                        @Html.ActionLink(string.Format($"{album.Name} ({album.Photos.Count})"),
                        "ListPhotos", "Home", new { @albumId = album.Id }, null)
                </h2>
            </p>
        </div>
        }
    </div>
</div>
<hr />

