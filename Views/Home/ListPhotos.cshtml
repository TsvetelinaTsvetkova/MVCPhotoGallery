@model List <MVCPhotoGallery.Models.Photo>

@{
    ViewBag.Title = "List";
}

@if (ViewBag.MaxPage != null)
    {
        for (int i = 1; i <= ViewBag.MaxPage; i++)
        {
            <ul class="pagination">
                <li>@Html.ActionLink(@i.ToString(), "ListPhotos", new { page = @i, @albumId = ViewBag.AlbumId }, null)</li>
            </ul>
        }
    }
<div class="container">
    @foreach (var photo in Model)
    {
        <div class="col-sm-4">
            <article>
                <header>
                    <h2>
                        @Html.ActionLink(@photo.Title, "Details", "Photo", new { @id = photo.Id }, null)
                    </h2>
                </header>
                <img src="@photo.Path" width="304" height="236" />
                <footer>
                    <small class="author">
                        Author @photo.Author.FullName
                    </small>
                </footer>
            </article>
        </div>
    }


</div>
       